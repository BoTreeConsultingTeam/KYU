.spacer20
.modal-submit-questions
  .modal-dialog
    .modal-body
      .row
        %strong.h3
          Check Student's Weakness
        .col-md-6
          = form_tag student_weakness_path do
            .spacer20
            = text_field_tag :email, nil,:class => 'form-control'
            .spacer20
            = submit_tag "Check", class: 'btn btn-primary'
.spacer20
.modal-submit-questions
  .modal-dialog
    .modal-body
      .row
        %strong.h3
          Check Student's Strength
        .col-md-6
          = form_tag student_strength_path do
            .spacer20
            = text_field_tag :email, nil,:class => 'form-control'
            .spacer20
            = submit_tag "Check", class: 'btn btn-primary'

.spacer20
.modal-submit-questions
  .modal-dialog
    .modal-body
      .row
        %strong.h3
          Check Student's Activeness
        .col-md-6
          = form_tag student_activeness_path do
            = select_tag :standard_id, content_tag(:option,'select standard...',:value=>"")+options_from_collection_for_select( @standards, :id, :class_no), class: 'form-control', data: {remote: true, url: divisions_by_standard_path(form: 'activeness')}
            .spacer20
            = select_tag 'division_id', content_tag(:option,'select division...',:value=>"")+options_from_collection_for_select( @divisions, :id, :division), class: 'form-control division_list1', id: 'activeness'
            .spacer20
            = submit_tag "Check", class: 'btn btn-primary'

.spacer20
.modal-submit-questions
  .modal-dialog
    .modal-body
      .row
        %strong.h3
          Check Students' Questions Comparision
        .col-md-6
          = form_tag students_questions_compare_path do
            = select_tag 'standard_id', content_tag(:option,'select standard...',:value=>"")+options_from_collection_for_select( @standards, :id, :class_no), class: 'form-control', data: {remote: true, url: divisions_by_standard_path(form: 'questions') }
            .spacer20
            = select_tag 'division_id', content_tag(:option,'select division...',:value=>"")+options_from_collection_for_select( @divisions, :id, :division), class: 'form-control division_list2', id: 'questions'
            .spacer20
            = submit_tag "Check", class: 'btn btn-primary'

.spacer20
