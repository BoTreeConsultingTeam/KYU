.row.select-category
%ul#main_users_list.row
  - students.each do |student|
    %li.user-item.col-md-4.col-xs-6
      %span.user-avatar
        %img.avatar{:alt => "", :src => "http://demo.enginethemes.com/qaengine/wp-content/uploads/2014/08/1282.jpg"}
      .left-info
        %span.display_name 
          = link_to student.username, member_path(student, user: "Student")
        %br
          %span.email
            = student.email
          .question-cat
            %span.user-badge
              = render :partial => 'student_badge', :locals => { :object => student}  
            %span.points 
              -if student.points.nil?
                0 Points
              - else
                = "#{student.points} Points"
          - if administrator_signed_in? 
            -if student.enable == true
              = link_to t('students.links.block'), deactivate_path(student) 
              |
            -else
              = link_to t('students.links.unblock'),activate_student_path(student)
              |
          - if ((administrator_signed_in? || teacher_signed_in?) && student.mark_as_review == false)
            = link_to t('students.links.mark_as_review'), markreview_path(student)
          - if ((administrator_signed_in? || teacher_signed_in?) && student.mark_as_review == true)
            = link_to t('students.links.review'), member_path(student,active_tab: "Student")
            = link_to t('students.links.unmark_review'), unmark_student_review_path(student)
 