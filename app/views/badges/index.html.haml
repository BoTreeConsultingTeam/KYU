.row.select-category
  .col-md-6.col-xs-6.current-category
    %span
      Badges
  .col-md-6.col-xs-6.current-category    
    %span
      - if (administrator_signed_in?)
        = link_to ' Add Badge', new_badge_path,'data-no-turbolink' => true, class: 'fa fa-plus btn btn-success  pull-right'
.row.points-system
  .col-md-12
    %h3 
      = t('badges.captions.point_system')  
    %p 
      = t('badges.captions.earn_reputaion')  
  .clearfix
  %ul.raw.points-define.single-head
    - @points.each do |point|
      %span
        %li.col-md-3.col-xs-6
          %div
            %span.points-count
              = point.score
            %span.star
              %i.fa.fa-star
              - if (administrator_signed_in?)
                |
                = link_to '', edit_point_path(point.id), class: 'fa fa-pencil'
              %br
              = point.action
          %br

            
.row.badges-system
  .col-md-12
    %h3 
      = t('badges.captions.badge_system')      
    %p 
      = t('badges.captions.earn_reputaion')  
  .col-md-12.badge-content
    = render 'badge_list'  

