- @badges.each do |badge|
  .border
    .col-md-3.question-cat
      %span.user-badge{style: "background-color: #{badge.color}"}
        = badge.name    
      %span 
        = render partial: '/badges/badges_links', locals: { badge: badge}
      %br
        %span.points-count
          = badge.points
        %span.star
          %i.fa.fa-star
          %br
            = t('badges.captions.points_require')
    %ul.raw.single-head
      - badge_rules = badge.rules 
      = render partial: 'badges/rules_list', locals: { rules: @rules, badge_rules: badge_rules}