%div
  = link_to  t('questions.btn.new_question') , new_question_path ,method: :get, class:" btn btn-primary pull-right" 
%div
  %h1
    = t('questions.page_header.title')
  - @questions.each do |question|
    %h3
      = link_to  question.title, question_path(question)
    By
    = question.askable.first_name
    %br
    = "#{time_ago_in_words(question.created_at)} ago."
    Tags: #{raw question.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')}
    %br/
    = vote_up_question_link(question)
    = vote_down_question_link(question)
    %hr
