= form_for(resource, :as => resource_name, :url => student_registration_path) do |f|
  = devise_error_messages!
  %div
  %br
  = f.label :username
  = f.text_field :username,class: 'form-control'
  %br
  =f.label :middle_name
  =f.text_field :middle_name,class: 'form-control'
  %br
  = f.label :last_name
  = f.text_field :last_name,class: 'form-control'
  %br
  = f.label :user_name
  =f.text_field :username,class: 'form-control'
  %br
  = f.label :DOB
  = f.date_field :birthdate,class: 'form-control'
  %br   
  = f.label :email

  = f.email_field :email, :autofocus => true,class: 'form-control'
  %div
  %br/
  = f.label :password

  = f.password_field :password,class: 'form-control'
  %div
  %br/
  = f.label :password_confirmation

  = f.password_field :password_confirmation,class: 'form-control'
  %br/
  %div
  = f.label :current_passwordclass
  %i (we need your current password to confirm your changes)
  %br/
  = f.password_field :current_password,class: 'form-control'
  %div= f.submit "Submit",class: 'btn btn-primary'