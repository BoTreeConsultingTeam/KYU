%div
  %h2.page-header
    =t('common.page_header.sign_in') 
  .row
    .col-lg-3
    .col-lg-3
      %h2 Sign in for student
      = form_for(resource, :as => resource_name, :url => new_student_session_path) do |f|
        %div
          = f.label :email
          %br/
          = f.email_field :email, :autofocus => true,class: 'form-control'
        %div
          = f.label :password
          %br/
          = f.password_field :password,class: 'form-control'
        - if devise_mapping.rememberable?
          %div
            = f.check_box :remember_me
            = f.label :remember_me
        %div= f.submit "Sign in",class: 'btn btn-primary'
      = render "students/shared/links"
