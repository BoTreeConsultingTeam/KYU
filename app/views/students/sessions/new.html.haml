%h2 
  = t('common.page_header.title_sign_in')
= form_for(resource, :as => resource_name, :url => new_student_session_path) do |f|
  %div
    = f.label t('common.basic.email')
    %br/
    = f.email_field :email, :autofocus => true
  %div
    = f.label t('common.basic.password')
    %br/
    = f.password_field :password
  - if devise_mapping.rememberable?
    %div
      = f.check_box :remember_me
      = f.label t('common.basic.remember')
  %div= f.submit t('common.btn.sign_in'),class: 'btn btn-primary'
= render "students/shared/links"
