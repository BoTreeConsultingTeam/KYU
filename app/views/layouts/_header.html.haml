%header#header
  #logo.col-md-2.col-xs-2
    KYU
  -if (user_signed_in)
    .col-md-8.col-xs-8
      .header-menu    
        %ul
          %li
            = link_to t('header_navigation.home'), questions_path(active_tab: 'all')   
          - if student_signed_in?
            %li
              = link_to 'Profile', student_views_profile_path(current_user)
            %li
              = link_to t('header_navigation.logout'), destroy_student_session_path, method: :delete
          - if teacher_signed_in?
            %li
              = link_to 'Report', reports_path
            %li
              = link_to 'Profile', teacher_views_profile_path(current_user)
            %li
              = link_to "Logout", destroy_teacher_session_path, method: :delete
          - if administrator_signed_in?
            %li
              = link_to 'Disabled Question', disabled_questions_path
            %li       
              = link_to 'Report', reports_path
            %li
              = link_to t('header_navigation.logout'), destroy_teacher_session_path, method: :delete
    .col-md-2.col-xs-2.btn-group.header-avatar
      %span.expand
        %a{:href => '#'}
          %span.avatar
            %img.avatar
          %span.display_name
          - if student_signed_in?
            = link_to student_views_profile_path(current_user) do
              = "Welcome #{current_student.username.titleize}"
          - if teacher_signed_in?
            = link_to teacher_views_profile_path(current_user) do
              = "Welcome #{current_teacher.username}"
          - if administrator_signed_in?
            = "Welcome #{current_administrator.email}"
      .header-search-wrapper#que-search
        %form#header_search
          %input{:autocomplete => "off", :name => "search", :placeholder => "Enter Keywords", :type => "text", :value => "" , id: 'search'}/ 
          %i.fa.fa-search
        .search-preview#search_preview
          %span.i-preview

        