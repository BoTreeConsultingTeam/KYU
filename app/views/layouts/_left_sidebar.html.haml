.col-md-2.disable-mobile.left-sidebar
  .widget.widget-btn
    -if !(current_administrator)
      = link_to  t('questions.btn.new_question'), new_question_path,method: :get, class:" btn btn-primary pull-left", style: 'color: #FFFFFF !important;','data-no-turbolink' => true
  .widget.widget-menus
    .menu-left-menu-container
      %ul#menu-left-menu-1.menu
        %li.fa-question-circle.menu-item.menu-item-type-custom.menu-item-object-custom
          = link_to questions_path do
            %i.fa.fa-question-circle>
            = t('header_navigation.questions')
        %li.fa-tags.menu-item.menu-item-type-post_type.menu-item-object-page.menu-item-183
          = link_to tags_path do
            %i.fa.fa-tags>
            Tags
        - if (student_signed_in? || teacher_signed_in?)    
          %li.fa-users.menu-item.menu-item-type-post_type.menu-item-object-page.menu-item-1743
            %a{:href => members_path(active_tab: 'Students')}
              %i.fa.fa-users>
              Users
