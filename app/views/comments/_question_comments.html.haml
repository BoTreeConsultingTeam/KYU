.col-md-10.col-xs-10
  %p= raw(question_comment.comment)
  %hr/
.col-md-2.col-xs-2
  - if question_comment.is_author?(current_user)
    =link_to '',edit_question_comment_path(question.id,question_comment.id),rel: 'tooltip',title: 'Edit',class: 'edit-comment fa fa-pencil','data-no-turbolink' => true
    |
    =link_to '',question_comment_path(question.id,question_comment.id),method: :delete,data: {confirm: "are you sure?"},remote: true,rel: 'tooltip',title: 'Delete',class: 'delete-comment fa fa-trash-o'
