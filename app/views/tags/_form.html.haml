.modal-submit-questions
  .modal-dialog
    .modal-body
      = form_for(@tag, :url => {:controller => "tags", :action => "update"}) do |f|
        = render 'shared/error_messages', object: f.object
        %div
        = f.label :name
        %br/
        = f.text_field :name, autofocus: true, class: 'submit-input'        
        = f.text_area :description, autofocus: true, :toolbar => 'mini', :class => 'ckeditor', style: 'width: none !important;'
        %br/
        = f.submit 'Update',class: 'btn-submit-question', id: 'btn_submit_question'