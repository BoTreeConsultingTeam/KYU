.container-fluid
  .row
  / END HEADER
  #header_sidebar.col-md-12.col-xs-12
  = render 'layouts/left_sidebar'
  .col-md-8.main-content
    = render :partial => "layouts/sub_heading", :locals => {:object => 'Add New Tag'}
    .modal-submit-questions
      .modal-dialog
        .modal-body
          = form_for(@tag, :url => {:controller => "tags", :action => "create"}) do |f|
            = render 'shared/error_messages', object: f.object
            %div
            = f.label :name
            %br/
            = f.text_field :name, autofocus: true, class: 'submit-input'        
            = f.text_field :description, autofocus: true, class: 'submit-input'        
            = f.submit
    
  = render 'layouts/right_sidebar'
