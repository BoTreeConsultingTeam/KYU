= render :partial => "layouts/sub_heading", :locals => {:object => 'Profile'}
.row.user-statistic.highlight
  .col-md-5.col-xs-5.user-info
    %span.avatar
      = image_tag @teacher.avatar.url(:medium), alt: t('common.image.alt') ,class: 'img-circle profile-img'    
    %ul
      %li.name 
        = @teacher.username
  .col-md-7.col-xs-7.user-post-count
    .row
      .col-md-4.col-xs-4
        %p.questions-count
          Questions
          %br
            %span 
              = @teacher.questions.count
      .col-md-4.col-xs-4
        %p.answers-count
          Answers
          %br
            %span 
              = @teacher.answers.count
/ END USER-STATISTIC
.row.question-filter
  - if ( @teacher == current_user )
    .col-md-12.sort-questions
      %ul
        %li
          = link_to t('common.links.edit_your_info'), edit_teacher_registration_path
        %li
          = link_to t('common.links.basic_info'), teacher_views_profile_path(@teacher.id, active_tab:'basicinfo'), class: "#{profile_active_tab('basicinfo')}"
        %li
          = link_to t('common.links.question'), teacher_views_profile_path(@teacher.id, active_tab:'questions'), class: "#{profile_active_tab('questions')}"
        %li
          = link_to t('common.links.answers'), teacher_views_profile_path(@teacher.id, active_tab:'answers'), class: "#{profile_active_tab('answers')}"
        %li
          = link_to t('common.links.bookmarks'), teacher_views_profile_path(@teacher.id, active_tab:'bookmarks'), class: "#{profile_active_tab('bookmarks')}"
  - else
    .col-md-12.sort-questions
      %ul
        %li
          = link_to t('common.links.basic_info'), teacher_views_profile_path(@teacher.id, active_tab:'basicinfo'), class: "#{profile_active_tab('basicinfo')}"
        %li
          = link_to t('common.links.question'), teacher_views_profile_path(@teacher.id, active_tab:'questions'), class: "#{profile_active_tab('questions')}"
        %li
          = link_to t('common.links.answers'), teacher_views_profile_path(@teacher.id, active_tab:'answers'), class: "#{profile_active_tab('answers')}"
/ END QUESTIONS-FILTER
- if params[:active_tab] == "answers"
  .main-questions-list
    %ul#main_questions_list
      -if !(@answers.blank?)
        = render :partial => 'members/member_answers_list', locals: { answers: @answers}
      - else
        .spacer50
        .col-md-2
        .col-md-6.col-xs-12
          %h4
            You don't  have answered any question yet
- elsif params[:active_tab] == "bookmarks"
  - question_list = bookmark_question_ids @teacher
  - if !(question_list.blank?)
    = render :partial => 'questions/questions_list', :locals => { questions: question_list}
  - else
    .spacer50
    .col-md-2
    .col-md-6.col-xs-12
      %h4
        No Bookmarks yet
    
- elsif params[:active_tab] == "questions"
  - if !(@teacher.questions.blank?)
    = render partial: 'questions/questions_list', locals: {questions: @questions}
  - else
    .spacer50
    .col-md-2
    .col-md-6.col-xs-12
      %h4
        You don't have asked any questions yet
- else
  .row
    .col-md-9.col-md-push-3 
      =@teacher.first_name
      =@teacher.last_name 
     
    .col-md-3.col-md-pull-9 
      %b Name 
    
    .col-md-9.col-md-push-3 
      %br
        =@teacher.qualification
    .col-md-3.col-md-pull-9
      %br/
      %b Qualification
    
    .col-md-9.col-md-push-3
      %br/
      =@teacher.username
    .col-md-3.col-md-pull-9  
      %br/
      %b Username

    .col-md-9.col-md-push-3
      %br/
      =@teacher   .email 
    .col-md-3.col-md-pull-9
      %br/
      %b Email

.row.paginations.home