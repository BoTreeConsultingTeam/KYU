= render :partial => "layouts/sub_heading", :locals => {:object => 'Profile'}
.row.user-statistic.highlight
  .col-md-5.col-xs-5.user-info
    %span.avatar
      = image_tag @teacher.avatar.url(:medium), alt: t('common.image.alt') ,class: 'img-circle profile-img'    
    %ul
      %li.name 
        = @teacher.username
  .col-md-7.col-xs-7.user-post-count
    .row
      .col-md-4.col-xs-4
        %p.questions-count
          Questions
          %br
            %span 
              = @teacher.questions.count
      .col-md-4.col-xs-4
        %p.answers-count
          Answers
          %br
            %span 
              = @teacher.answers.count
/ END USER-STATISTIC
.row.question-filter
  - if ( @teacher == current_user )
    .col-md-12.sort-questions
      %ul
        %li
          = link_to t('common.links.edit_your_info'), teacher_views_profile_path(@teacher.id, active_tab: 'edit-profile'), class: "#{profile_active_tab('edit-profile')}"
        %li
          = link_to t('common.links.basic_info'), teacher_views_profile_path(@teacher.id, active_tab: t('students.active_tab.basic_info')), class: "#{profile_active_tab(t('students.active_tab.basic_info'))}"
        %li
          = link_to t('common.links.question'), teacher_views_profile_path(@teacher.id, active_tab: t('students.active_tab.questions')), class: "#{profile_active_tab(t('students.active_tab.questions'))}"
        %li
          = link_to t('common.links.answers'), teacher_views_profile_path(@teacher.id, active_tab: t('students.active_tab.answers')), class: "#{profile_active_tab(t('students.active_tab.answers'))}"
        %li
          = link_to t('common.links.bookmarks'), teacher_views_profile_path(@teacher.id, active_tab: t('students.active_tab.bookmarks')), class: "#{profile_active_tab(t('students.active_tab.bookmarks'))}"
  - else
    .col-md-12.sort-questions
      %ul
        %li
          = link_to t('common.links.basic_info'), teacher_views_profile_path(@teacher.id, active_tab: t('students.active_tab.basic_info')), class: "#{profile_active_tab(t('students.active_tab.basic_info'))}"
        %li
          = link_to t('common.links.question'), teacher_views_profile_path(@teacher.id, active_tab: t('students.active_tab.questions')), class: "#{profile_active_tab(t('students.active_tab.questions'))}"
        %li
          = link_to t('common.links.answers'), teacher_views_profile_path(@teacher.id, active_tab: t('students.active_tab.answers')), class: "#{profile_active_tab(t('students.active_tab.answers'))}"
        %li
          = link_to t('common.links.bookmarks'), teacher_views_profile_path(@teacher.id, active_tab: t('students.active_tab.bookmarks')), class: "#{profile_active_tab(t('students.active_tab.bookmarks'))}"
/ END QUESTIONS-FILTER

- if params[:active_tab] == "answers"
  .main-questions-list
    %ul#main_questions_list
      -if !(@answers.blank?)
        = render :partial => 'members/member_answers_list', locals: { answers: @answers}
      - else
        .col-md-3
        .col-md-6
          .spacer25
          %h3
            -if !(current_user == @teacher)
              = @teacher.username
              has not answered any Question
            - else
              You have not answered any Question
- elsif params[:active_tab] == "edit-profile"
  = render 'form'

- elsif params[:active_tab] == "basicinfo"
  .modal-submit-questions
    .modal-dialog
      .modal-body
        = form_for(resource, :as => resource_name, :url => teacher_registration_path) do |f|
          %br
          = f.label t('common.captions.user_name')
          = f.text_field :username,class: 'form-control', disabled: true
          %br
          = f.label t('common.captions.qualification')
          = f.text_field :qualification, class: 'form-control'
          %br
          = f.label t('common.captions.email')
          = f.email_field :email, :autofocus => true,class: 'form-control', disabled: true
          %br/

- elsif params[:active_tab] == "bookmarks"
  - question_list = bookmark_question_ids @teacher
  - if !(question_list.blank?)
    = render :partial => 'questions/questions_list', :locals => { questions: question_list}
  - else
    .col-md-3
    .col-md-6
      .spacer25
      %h3
        No Questions are Bookmarked
    
- elsif params[:active_tab] == "questions"
  - if !(@teacher.questions.blank?)
    = render partial: 'questions/questions_list', locals: {questions: @questions}
  - else
    .col-md-3
    .col-md-6
      .spacer25
      %h3
        -if !(current_user == @teacher)
          = @teacher.username
          has not asked any Question
        - else
          You have not asked any Question
- else
  .modal-submit-questions
    .modal-dialog
      .modal-body
        = form_for(resource, :as => resource_name, :url => teacher_registration_path) do |f|
          %br
          = f.label t('common.captions.user_name')
          = f.text_field :username,class: 'form-control', disabled: true
          %br
          = f.label t('common.captions.qualification')
          = f.text_field :qualification, class: 'form-control'
          %br
          = f.label t('common.captions.email')
          = f.email_field :email, :autofocus => true,class: 'form-control', disabled: true
          %br/

.row.paginations.home