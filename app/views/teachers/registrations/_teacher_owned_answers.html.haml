.main-questions-list
  %ul#main_questions_list
    -if !(@answers.blank?)
      = render :partial => 'members/member_answers_list', locals: { answers: @answers}
    - else
      .col-md-3
      .col-md-6
        .spacer25
        %h3
          -if !(current_user == @teacher)
            = @teacher.username
            = t('answers.basic.teacher_not_answered')
          - else
            = t('answers.basic.user_not_answered')