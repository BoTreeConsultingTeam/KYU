%div
  %h2.page-header
    = t('common.page_header.sign_up')

  .row
    .col-lg-3
    .col-lg-3

      = form_for(resource, :as => resource_name, :url => teacher_session_path) do |f|
        %div
          = f.label :email
          %br/
          = f.email_field :email, :autofocus => true,class: 'form-control'
        %div
          = f.label :password
          %br/
          = f.password_field :password,class: 'form-control'
        - if devise_mapping.rememberable?
          %div
            = f.check_box :remember_me
            = f.label :remember_me
        %div= f.submit "Sign in"
      = render "teachers/shared/links"
      teacher_session_path
