.container
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin', role: 'form' }) do |f|
    = devise_error_messages!
    %h2.form-signin-heading Forgot your password?
    = f.email_field :email, autofocus: true, class: 'form-control'
    = f.submit "Send me reset password instructions", class: 'btn btn-primary btn-block'
    = render "users/shared/links"