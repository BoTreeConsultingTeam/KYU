.container
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-signin', role: 'form' }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    %h2.form-signin-heading Change Password
    = f.password_field :password, autofocus: true, placeholder: 'Password', class: 'form-control'
    = f.password_field :password_confirmation, placeholder: 'Confirm new Password', class: 'form-control'
    = f.submit "Change my password", class: 'btn btn-primary btn-block'
    = render "users/shared/links"