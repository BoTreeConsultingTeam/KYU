%div
  -if can? :new, Question
    = ask_question
- if can? :edit, @questions
  = link_to 'Hello',"#",class:" btn btn-primary pull-right"
%div
  %h1
    Latest Questions
    -i=1
  - @questions.each do |question|
    %h3
      = i
      = link_to  question.title, question_path(question)
      = link_to 'delete',question_path(question.id),method: :delete,data: {confirm: "are you sure?"}
    By
    = question.askable.username
    %br
    #{time_ago_in_words(question.created_at)} ago.
    - i += 1
    Tags :
    = tags_of_this_question(question)
    %br/
    = render partial: "questions/vote_links",locals: {question: question}
    %hr

