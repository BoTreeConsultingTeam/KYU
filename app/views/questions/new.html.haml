  .row
    / END HEADER
    #header_sidebar.col-md-12.col-xs-12
    = render 'layouts/left_sidebar'
    .col-md-8.main-content
      / %h2 
      /   = t('questions.page_header.title_for_new')
        
      / = form_for(@question) do |f|
      /   = render 'shared/error_messages', object: f.object
      /   %div
      /   = f.label :title
      /   %br/
      /   = f.text_field :title, autofocus: true
      /   %div
      /   = f.label t('questions.basic.content_label')
      /   %br/
      /   = f.cktext_area :content, :extraPlugins => 'mathjax'#:ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini'}
      /   %div
      /     = f.label :tag_list, t('questions.basic.tag_on_new')
