      /     = f.submit t('questions.btn.submit'),class: 'btn btn-primary'
      .modal-submit-questions
        .modal-dialog
          .modal-body
            
            = form_for(@question) do |f|
              = render 'shared/error_messages', object: f.object
              %div
              = f.label :title
              %br/
              = f.text_field :title, autofocus: true, class: 'submit-input'
              %div
              = f.label t('questions.basic.content_label')
              %br/
              = f.cktext_area :content, :extraPlugins => 'mathjax'#:ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini'}
              %div
                = f.label :tag_list, t('questions.basic.tag_on_new')
                = f.text_field :tag_list,class: 'submit-input.tags-input'
                -if current_student
                  = f.hidden_field :user_id, :value => current_student.id 
                -elsif current_teacher
                  = f.hidden_field :user_id, :value => current_teacher.id 
                = f.submit t('questions.btn.submit'),class: 'btn-submit-question', id: 'btn_submit_question'  
                  
                  
            

    = render 'layouts/right_sidebar'
