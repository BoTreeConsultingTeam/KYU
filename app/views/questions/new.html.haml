%h2
  = t('questions.page_header.title_for_new')
  
= form_for(@question) do |f|
  %div
  = f.label :title
  %br/
  = f.text_field :title, :autofocus => true
  %div
  = f.label t('questions.basic.content_label')
  %br/
  = f.text_area :content
  %div
    = f.label :tag_list, t('questions.basic.tag_on_new')
    = f.text_field :tag_list
    = f.hidden_field :user_id, :value => current_user.id 
    = f.submit t('questions.btn.submit'),class: 'btn btn-primary'

