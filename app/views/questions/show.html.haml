%h3  
  Que.
  =@question.title
  %br
  = link_to 'New Answer', new_answer_path(:question_id => @question.id) 
  %hr

  = form_for (Comment.new) do |f|
    = f.text_area :comment, placeholder: "Write a comment..."
    = f.hidden_field :commentable_type, :value => @question.class.to_s
    = f.hidden_field :commentable_id, :value => @question.id
    = submit_tag "post coment"
  %hr
  -comments_of_this_question.each do |c|
    %div.row
      .col-lg-1
      .col-lg-8
        =c.comment
        %hr/

  %br/  
  %br/
  
  %h2 Answers
  %hr
-@answers.each do |ans|
  %h4.strong
    =ans.content
  By
  =Student.find(ans.user_id).first_name
  #{time_ago_in_words(ans.created_at)} ago.
  %hr
