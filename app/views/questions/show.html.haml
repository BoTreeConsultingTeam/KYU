%h3  
  Que.
  =@question.title
  %br
  = link_to 'New Answer', new_answer_path(:question_id => @question.id) 
  %hr
  Answers
  %hr
-@answers.each do |answer|
  %h4.strong
    =answer.content
  By
  =Student.find(answer.user_id).first_name
  #{time_ago_in_words(answer.created_at)} ago.
  %br/
  = vote_up_answer_link(answer)
  = vote_down_answer_link(answer)
  %hr
