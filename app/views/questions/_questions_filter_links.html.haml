.clearfix
#question_filter.row.question-filter
  .col-md-12.col-xs-12.sort-questions
    %ul
      %li
        = link_to t('questions.links.all'), questions_path(:active_tab => 'all'),{'data-no-turbolink' => true, class: 'questions_filter_link filter_link', id: "default_link", remote: true}
      %li
        = set_link(t('questions.links.newest'),'newest')
      %li
        = set_link(t('questions.links.last_week'),'week')          
      %li
        = set_link(t('questions.links.last_month'),'month')
      %li
        = set_link(t('questions.links.most_viewed'),'most_viewed')
      %li
        = set_link(t('questions.links.most_voted'),'most_voted')
      %li
        = set_link(t('questions.links.unanswered'),'un_answered')