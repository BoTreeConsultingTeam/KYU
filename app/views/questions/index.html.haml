.container-fluid
  .row
    / END HEADER
    #header_sidebar.col-md-12.col-xs-12
    = render 'layouts/left_sidebar'
    .col-md-8.main-content
      = render :partial => "layouts/sub_heading", :locals => {:object => 'All Questions'}
      / END SELECT-CATEGORY
      .clearfix
      #question_filter.row.question-filter
        .col-md-6.col-xs-6.sort-questions
          %ul
            %li
              %a.active{:href => "http://demo.enginethemes.com/qaengine/questions/"} Latest
            %li
              = set_link(t('questions.link.last_week'),'week')

            %li
              = set_link(t('questions.link.last_month'),'month')
      .main-questions-list
        %ul#main_questions_list
          = render :partial => "questions_list"
      .row.paginations.home
        .col-md-12
          =paginate @questions
      / END MAIN-PAGINATIONS
    = render 'layouts/right_sidebar'
  / END ROW