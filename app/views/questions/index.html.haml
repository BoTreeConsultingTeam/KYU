- if params[:tag]
  = render :partial => "layouts/sub_heading", :locals => {:object => t('questions.captions.tagged_questions')}
-else
  = render :partial => "layouts/sub_heading", :locals => {:object => 'All Questions'}
= render :partial => "questions_filter_links"
- if !@tag.nil?
  %ul.row.select-category
    %li.col-md-12.select-catagory.single-head
      .col-md-2
        .q-tag
          = @tag       
      .col-md-8
        = raw(@tag.description)
- if @questions.nil?
  = render :partial => 'questions_list', :locals => { questions: @questions}
-else
  .col-md-4
  .col-md-4.col-xs-12
    .spacer50
    %h3
      = t('questions.error.message')