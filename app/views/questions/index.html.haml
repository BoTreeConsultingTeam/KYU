.container-fluid
  .row
    / END HEADER
    #header_sidebar.col-md-12.col-xs-12
    = render 'layouts/left_sidebar'
    .col-md-8.main-content
      .row.select-category
        .col-md-6.col-xs-6.current-category
          %span All Questions
        .col-md-6.col-xs-6
          .select-categories-wrapper
            .select-categories
              %select#move_to_category.select-grey-bg
                %option{:value => ""} Filter by category
                %option{:value => "http://demo.enginethemes.com/qaengine/question-category/accessories/"}
                  Accessories
                %option{:value => "http://demo.enginethemes.com/qaengine/question-category/ebook/"}
                  Ebook
      / END SELECT-CATEGORY
      .clearfix
      #q_filter_waypoints.row.q-filter-waypoints.collapse{:style => "display: none;"}
        .col-md-2.col-xs-2
          %button.action.ask-question{"data-toggle" => "modal", :type => "button"}
            %i.fa.fa-plus
            ASK A QUESTION
        .col-md-8.col-sm-10.col-xs-10
          .row
            .col-md-2.col-xs-2
              %span.q-f-title
                All Questions
            / END TITLE
            .col-md-4.col-xs-4
              %ul.q-f-sort
                %li
                  %a.active{:href => "http://demo.enginethemes.com/qaengine/questions/"} Latest
                %li
                  %a{:href => "/qaengine/questions/?sort=vote"} Votes
                %li
                  %a{:href => "/qaengine/questions/?sort=unanswer"} Unanswered
              / END FILTER
            .col-md-6.col-xs-6
              .select-categories-wrapper
                .select-categories
                  %select#move_to_category.select-grey-bg
                    %option Filter by category
                    %option{:value => "http://demo.enginethemes.com/qaengine/question-category/accessories/"}
                      Accessories
                    %option{:value => "http://demo.enginethemes.com/qaengine/question-category/accounting/"}
                      Accounting
                    %option{:value => "http://demo.enginethemes.com/qaengine/question-category/advice/"}
                      Advice
                    %option{:value => "http://demo.enginethemes.com/qaengine/question-category/arts/"}
                      Arts
                    
              / END SELECT CATEGORIES
              .number-of-questions-wrapper
                .number-of-questions
                  %select#filter-numbers.select-grey-bg
                    %option{:value => "http://demo.enginethemes.com/qaengine/questions/?numbers=20"} 20
                    %option{:value => "http://demo.enginethemes.com/qaengine/questions/?numbers=15"} 15
                    %option{:selected => "", :value => "http://demo.enginethemes.com/qaengine/questions/?numbers=12"} 12
                    %option{:value => "http://demo.enginethemes.com/qaengine/questions/?numbers=10"} 10
                    %option{:value => "http://demo.enginethemes.com/qaengine/questions/?numbers=5"} 5
              / END POSTS PER PAGE
      #question_filter.row.question-filter
        .col-md-6.col-xs-6.sort-questions
          %ul
            %li
              %a.active{:href => "http://demo.enginethemes.com/qaengine/questions/"} Latest
            %li
              = set_link(t('questions.link.last_week'),'week')
              
            %li
              = set_link(t('questions.link.last_month'),'month')
      .main-questions-list
        %ul#main_questions_list
          - @questions.each do |question|
            %li.post-1728.question.type-question.status-publish.hentry.question-item{"data-id" => "1728"}
              .col-md-8.col-xs-8.q-left-content
                .q-ltop-content
                  = link_to  question.title, question_path(question),class: 'question-title'
                .q-lbtm-content
                  .question-excerpt
                    %p 
                      = question.content         
                  .question-cat
                    %ul.question-tags
                      - question.tag_list.each do |tag|
                        %li
                          = link_to tag, tag_path(tag),class: 'q-tag'   
                    .clearfix
                    %a{:href => "http://demo.enginethemes.com/qaengine/member/admindemo/"}
                      %span.author-avatar
                        %img.avatar{:alt => "", :src => "http://1.gravatar.com/avatar/3743112a070d24fe4dbd5cb39d6a5e9e?s=30&amp;d=http%3A%2F%2F1.gravatar.com%2Favatar%2Fad516503a11cd5ca435acc9bb6523536%3Fs%3D30&amp;r=G"}                     
                      %span.author-name 
                        = question.askable.username
                    %span.user-badge{:style => "background-color:#04aad4;", :title => "67"} 
                      = question.askable.class
                    %span.question-time
                      #{time_ago_in_words(question.created_at)} ago.
              / end left content
              .col-md-4.col-xs-4.q-right-content
                %ul.question-statistic
                  %li
                    %span.question-views.question_view_overwrite
                      #{question.impressionist_count} 
                    views
                  %li.active
                    %span.question-answers.question_view_overwrite
                      #{question.answers.count} 
                    answers
                  %li
                    %span.question-views.question_view_overwrite
                      = question.get_upvotes.size
                    Upvotes
                  %li
                    %span.question-answers.question_view_overwrite
                      = question.get_downvotes.size
                    Downvotes  
              / end right content
            
              / end right content
        / END MAIN-QUESTIONS-LIST
      .row.paginations.home
        .col-md-12
          =paginate @questions  
      / END MAIN-PAGINATIONS
    = render 'layouts/right_sidebar'
  / END ROW