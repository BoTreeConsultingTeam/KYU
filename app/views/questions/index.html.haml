%div
  = set_link(t('questions.link.last_week'),'week')
  = set_link(t('questions.link.last_month'),'month')
%div
  = button_to  t('questions.btn.new_question'), new_question_path,method: :get, class:" btn btn-primary pull-right" 
%h2
  = t('questions.page_header.title')
    Latest Questions
    -i=1
=paginate @questions
%div
  - @questions.each do |question|
    %h3
      = i
      = link_to  question.title, question_path(question)
      = link_to 'delete',question_path(question.id),method: :delete,data: {confirm: "are you sure?"}
    = t('questions.basic.asked_by')
    = get_user_name(question.user_id)
    #{time_ago_in_words(question.created_at)} ago.
    %br
    %strong
      = t('questions.basic.tag')
    #{raw question.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')}
    %strong
      = t('questions.basic.view')
    #{question.impressionist_count}  
    %br/  
    = vote_up_question_link(question)
    = question.get_upvotes.size 
    = vote_down_question_link(question)
    = question.get_downvotes.size
    %hr
.pull-right
  = render :partial => "shared/pagination", :locals => {:object => @questions}
