= form_for(@question) do |f|
  %div
  = f.label :title
  %br/
  = f.text_field :title, :autofocus => true
  %div
  = f.label :content
  %br/
  = f.text_area :content
  %div
    = f.label :tag_list, "Tags (separated by commas)"
    = f.text_field :tag_list
    = f.hidden_field :user_id, :value => current_user.id 
    = f.submit "Submit",class: 'btn btn-primary'