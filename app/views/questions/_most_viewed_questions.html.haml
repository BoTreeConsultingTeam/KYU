%ul
  - most_viewed_questions.each do |question|
    %li
      %span.avatar
        = image_tag "#{set_user_image(question.askable.avatar.path)}", alt: t('common.image.alt'), class: 'img-circle user-small-thumb-img' 
      = link_to  question.title, question_path(question), 'data-no-turbolink' => true
